#home-container
  width: 100%
  height: max-content
  padding: 1.8rem 0

#home-content
  width: 95%
  max-width: var(--meow-main-width)
  height: auto
  margin: 0 auto
  display: flex
  flex-direction: hexo-config('sidebar.position') == 'left' ? row : row-reverse

#home-main
  flex: 3.2
  height: max-content
  display: flex
  flex-direction: column
  gap: 1.2rem

.home-article
  background-color: var(--background-color-transparent-1)
  backdrop-filter: blur(3px)
  border-radius: 1rem
  box-shadow: var(--meow-card-shadow)
  overflow: hidden
  transition: all .3s ease
  &:hover
    transform: scale(1.015)

.home-article-cover
  position: relative
  width: 100%
  height: 10rem
  border-radius: 1rem 1rem 0 0
  overflow: hidden
  img
    width: 100%
    height: 100%
    object-fit: cover
    position: absolute
    top: 50%
    transform: translateY(-50%)

.home-article-content
  padding: 1.7rem 2.2rem

if hexo-config('home.cover_position') == 'left'
  .home-article
    display: flex
    align-items: center
  .home-article-cover
    flex: 2
    height: 100%
    border-radius: 0
    img
      position: static
      display: block
      transform: none
  .home-article-content
    flex: 3

.home-article-title
  margin: .3rem 0 .9rem
  a
    font-size: 1.55rem
    font-weight: bold
    color: var(--font-color)
    &:hover
      color: var(--theme-color)

.home-article-excerpt
  text-align: justify
  font-size: 1.05rem
  margin: .9rem 0

.home-article-info-container
  display: flex
  align-items: center
  justify-content: space-between
  font-size: .95rem

.home-article-info
  max-width: 80%
  display: flex
  align-items: center
  flex-wrap: nowrap
  gap: .8rem
  overflow: hidden
  overflow-x: auto
  scrollbar-width: none
  a, span, &
   color: var(--font-color-light-1)
  a:hover
    color: var(--theme-color)
    &:after
      color: var(--font-color-light-1)
  .icon
    opacity: .55
    height: 1.1rem
  >div
    display: flex
    align-items: center
    gap: .3rem

.home-article-date span
  white-space: nowrap

.home-article-categories
  a:not(:last-child):after
    content: ', '

.home-article-tags a
  white-space: nowrap
  text-overflow: ellipsis
  &:not(:last-child):after
    content: ' | '

.read-more-btn
  color: var(--font-color-light-1)
  &:hover
    color: var(--theme-color)